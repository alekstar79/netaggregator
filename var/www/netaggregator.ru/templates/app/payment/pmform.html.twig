{% extends '@layout/default.html.twig' %}

{% block title %}Perfect Money Payment{% endblock %}

{% block content %}
    <div class="jumbotron">
        <h1>Welcome to <span class="zf-green">Perfect Money</span></h1>

        <form action="{{ perfect_url }}" method="POST">
            <input type="hidden" name="PAYEE_ACCOUNT" value="{{ receiver }}">
            <input type="hidden" name="PAYEE_NAME" value="{{ targets }}">
            <input type="hidden" name="PAYMENT_UNITS" value="USD">
            <input type="hidden" name="STATUS_URL" value="https://netaggregator.ru/payment/pm/notifications">
            <input type="hidden" name="PAYMENT_URL" value="https://netaggregator.ru/payment/pm?state=success">
            <input type="hidden" name="NOPAYMENT_URL" value="https://netaggregator.ru/payment/pm?state=fail">
            <input type="hidden" name="PAYMENT_ID" value="{{ user_id }}">
            <input type="text" name="PAYMENT_AMOUNT" value="{{ ammount }}" placeholder="Сумма">
            <input type="submit" name="PAYMENT_METHOD" value="Оплатить">
        </form>
    </div>
{% endblock %}
